@{
	Layout = null;
	var nav = ViewBag.Nav ?? Navigation.None;
}
<ul class="nav navbar-nav">
	<li @if (nav == Navigation.Home) { <text>class="active"</text> }><a href="@Url.Home().Index()">Home</a></li>
</ul>
<ul class="nav navbar-nav navbar-right">
	@if (User.Identity.IsAuthenticated) {
		<li class="dropdown">
			<a class="btn dropdown-toggle" data-toggle="dropdown" href="#"><b class="icon-user"></b> @(((UserPrincipal)User).UserObject.Username)</a>
			<ul class="dropdown-menu">
				@if(((UserPrincipal)User).IsAdmin)
				{
					<li><a href="@Url.Admin().Home().Index()">Admin</a></li>
					<li class="divider"></li>
				}
				<li><a href="@Url.Account().Logout()">Logout</a></li>
			</ul>
		</li>
	} else {
		<li><a href="@Url.Account().Login()">Login</a></li>
	}
</ul>